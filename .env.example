# Kubra Market Admin - Environment Variables Example
# Copy this file to .env and fill in your own values

# Server
PORT=5000
NODE_ENV=development
SESSION_SECRET=your-session-secret-key

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
PGHOST=localhost
PGUSER=postgres
PGDATABASE=kubra_market
PGPORT=5432
PGPASSWORD=your-database-password

# JWT (for future auth implementation)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Application URLs
CLIENT_URL=http://localhost:5000
API_URL=http://localhost:5000/api

# Features
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Stripe (for future payment implementation)
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email (for future notification implementation)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# EMAIL_FROM=noreply@kubramarket.com