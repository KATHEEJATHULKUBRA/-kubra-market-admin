# Server Configuration for Netlify environment
NODE_ENV=production
SESSION_SECRET=your-secure-session-secret-here

# This is critical for Netlify Functions to work properly with session cookies
NETLIFY_DEV=true
VITE_USE_NETLIFY=true

# Database Configuration - Required for production
DATABASE_URL=postgres://username:password@host:port/database

# Application URLs - Will be set automatically by Netlify
# No need to configure these manually
# CLIENT_URL and API_URL are derived from the Netlify URL

# Feature Flags - Enable as needed
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# External Services - Enable as needed
# STRIPE_SECRET_KEY=sk_your_stripe_key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# EMAIL_FROM=no-reply@kubramarket.com